<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#register">Register</a></li>
            </ul>
        </div>
        <section id="login" class="col s6 offset-s3">

            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}

            <h1>Sign in account</h1>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>

                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}"> 

                <p><a href="/auth/reset">Forgot password?</a></p>

                <button class="btn btn-primary" type="submit">Sign in</button>
            </form>
        </section>

        <section id="register" class="col s6 offset-s3">

            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}

            <h1>Register new account</h1>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input id="reg-name" name="name" type="text" class="validate" required>
                    <label for="reg-name">Name</label>
                    <span class="helper-text" data-error="Enter name"></span>
                </div>

                <div class="input-field">
                    <input id="reg-email" name="email" type="email" class="validate" required>
                    <label for="reg-email">Email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>

                <div class="input-field">
                    <input id="reg-password" name="password" type="password" class="validate" required>
                    <label for="reg-password">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>

                <div class="input-field">
                    <input id="reg-password-repeat" name="repeat" type="password" class="validate" required>
                    <label for="reg-password-repeat">Retype Password</label>
                    <span class="helper-text" data-error="Repeat password"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button class="btn btn-primary" type="submit">Register</button>
            </form>
        </section>
    </div>
</div>